<h1 class="font-mono text-6xl font-bold mt-10 mb-10 text-yellow-500">Marley Reciples</h1>

<ul class="container mx-auto flex flex-col items-center">
  <% if @recipes.present? %>
    <% @recipes.each do |recipe| %>
      <li class="p-3">
        <%= link_to recipe_url(recipe.id) do %>
          <h2 class="font-mono text-3xl font-bold mb-3 text-gray-500 hover:text-gray-700"><%= recipe.title %></h2>
          <img src="<%= recipe.image_url %>" alt="Nome da receita" class="rounded" />
        <% end %>
      </li>
    <% end %>
  <% else %>
    <% flash.each do |type, msg| %>
      <h3 class="font-mono text-3xl font-bold mt-10 mb-10 text-yellow-500">
        <%= msg %>
      </h3>
    <% end %>
  <% end %>
</ul>
